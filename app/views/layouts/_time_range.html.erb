<!--don't include the button - so I can listen for specific events-->

<div class="timerange_grp">
  <label for="event_menu">Event Type</label>
  <select name="event_menu" id="event_menu">
    <% default = 'PushEvent' %>
    <% count = 1 %>
    <% @events.each do | e | %>
      <% if e === default %>
        <option value="<%= count %>" selected="1" > <%= e %> </option>
      <% else %>
        <option value="<%= count %>"> <%= e %> </option>
      <% end %>
      <% count += 1 %>
    <% end %>
  </select>
</div>

